<VirtualHost *:80>
        ServerName <%= @params[:server_name1] %>
        ServerAlias <% @params[:server_aliases1].each do |a| %><%= "#{a}" %> <% end %>
        DocumentRoot <%= @params[:docroot1] %>

<Directory <%= @params[:docroot1] %>>
        Options FollowSymLinks
        AllowOverride None
        Order allow,deny
        Allow from all
</Directory>

        LogLevel info
        ErrorLog <%= @node[:apache][:log_dir] %>/<%= @params[:name] %>-error.log
         CustomLog <%= @node[:apache][:log_dir] %>/<%= @params[:name] %>-access.log combined
</VirtualHost>
